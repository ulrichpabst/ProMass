{
  "name": "promass",
  "displayName": "ProMass",
  "description": "A VSCode extension for convenient peptide mass calculations.",
  "version": "0.0.1",
  "publisher": "UlrichPabst",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "configuration": {
          "type": "object",
          "title": "Protein Mass Calculator",
          "properties": {
              "proteinMassCalculator.updateInterval": {
                  "type": "number",
                  "default": 500,
                  "description": "Update interval for the peptide mass calculation in milliseconds."
              },
              "proteinMassCalculator.amidatedCterminus": {
                  "type": "boolean",
                  "default": false,
                  "description": "If true, calculates proteinmass for amidated C-terminus."
              }
          }
      }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
